{
  "name": "comrad",
  "version": "1.0.0",
  "description": "Comrad is an open-source web application for use by community radio stations that helps with crucial show scheduling and playlist entry to organize all on air and streaming processes for hosts and DJâ€™s.",
  "main": "index.js",
  "jest": {
    "setupTestFrameworkScriptFile": "./server/tests/setup.js",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/client/",
      "/server/config/test.js"
    ]
  },
  "scripts": {
    "start": "node index.js",
    "server": "nodemon server/index.js --ignore tests --delay 1",
    "client": "npm run start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "heroku-postbuild": "npm run build",
    "seed": "node server/v1/seedDB",
    "postinstall": "npm install --prefix client",
    "seed:test": "cross-env NODE_ENV=test npm run seed",
    "seed:dev": "cross-env NODE_ENV=development npm run seed",
    "styleguide": "npm run styleguide --prefix client",
    "styleguide:build": "npm run styleguidist build --prefix client",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "test:server": "jest",
    "test:client": "npm run test --prefix client -- --watchAll=true",
    "test": "npm run test:server && npm run test:client",
    "debug:server": "nodemon --inspect server/index.js --ignore tests --delay 1",
    "debug": "concurrently \"npm run debug:server\" \"npm run client\"",
    "cli:ac": "node cli/seedAccessControl/index.js",
    "cli:seedDB": "node cli/seedDB/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codefordenver/Comrad.git"
  },
  "author": "Sean Williams",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/codefordenver/Comrad/issues"
  },
  "homepage": "https://github.com/codefordenver/Comrad#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix --",
      "git add"
    ]
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "chance": "^1.0.18",
    "concurrently": "^4.1.0",
    "console.table": "^0.10.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-config-react-app": "^4.0.1",
    "eslint-plugin-flowtype": "^3.9.1",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0",
    "eslint-plugin-react-hooks": "^1.6.0",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.7",
    "nodemon": "^1.19.0",
    "prettier": "^1.17.1",
    "puppeteer": "^1.17.0",
    "supertest": "^4.0.2"
  },
  "dependencies": {
    "accesscontrol": "^2.2.1",
    "axios": "^0.19.0",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.19.0",
    "capitalize": "^2.0.0",
    "classnames": "^2.2.6",
    "dotenv": "^8.0.0",
    "express": "^4.17.0",
    "express-session": "^1.16.1",
    "fuse.js": "^3.4.4",
    "lodash": "^4.17.11",
    "moment": "^2.24.0",
    "mongoose": "^5.5.11",
    "mongoose-paginate": "^5.0.3",
    "nodemailer": "^6.2.1",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "redis": "^2.8.0",
    "rrule": "^2.6.0"
  }
}
