{
  "name": "comrad",
  "version": "1.0.0",
  "description": "Comrad is an open-source web application for use by community radio stations that helps with crucial show scheduling and playlist entry to organize all on air and streaming processes for hosts and DJâ€™s.",
  "main": "index.js",
  "jest": {
    "setupTestFrameworkScriptFile": "./server/tests/setup.js",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/client/",
      "/server/config/test.js"
    ]
  },
  "scripts": {
    "start": "node index.js",
    "server": "nodemon server/index.js --ignore tests --delay 1",
    "client": "npm run start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "heroku-postbuild": "npm run build",
    "seed": "node server/seedDB",
    "postinstall": "npm install --prefix client",
    "seed:test": "cross-env NODE_ENV=test npm run seed",
    "seed:dev": "cross-env NODE_ENV=development npm run seed",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "test:server": "jest",
    "test:client": "npm run test --prefix client -- --watchAll=true",
    "test": "npm run test:server && npm run test:client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codefordenver/Comrad.git"
  },
  "author": "Sean Williams",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/codefordenver/Comrad/issues"
  },
  "homepage": "https://github.com/codefordenver/Comrad#readme",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:fix"
    }
  },
  "devDependencies": {
    "babel-eslint": "^9.0.0",
    "concurrently": "^3.6.1",
    "cross-env": "^5.2.0",
    "eslint": "^5.6.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-config-react-app": "^3.0.5",
    "eslint-plugin-flowtype": "^2.50.3",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "nodemon": "^1.18.8",
    "prettier": "^1.15.3",
    "puppeteer": "^1.11.0",
    "supertest": "^3.3.0"
  },
  "dependencies": {
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.18.3",
    "classnames": "^2.2.6",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "lodash": "^4.17.11",
    "moment": "^2.22.2",
    "mongoose": "^5.3.15",
    "mongoose-paginate": "^5.0.3",
    "nodemailer": "^5.0.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "redis": "^2.8.0",
    "rrule": "^2.5.6"
  }
}
